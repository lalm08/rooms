generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

// Пользователь
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

// Устройства
model Device {
  id       String   @id @default(cuid())
  name     String
  bookings Booking[]
}

// Аудитории
model Auditory {
  id       String   @id @default(cuid())
  name     String
  capacity Int?      
  status   String? 
  bookings Booking[]
}

// Бронирования
model Booking {
  id          String   @id @default(cuid())
  deviceId    String
  auditoryId  String

  device   Device   @relation(fields: [deviceId], references: [id])
  auditory Auditory @relation(fields: [auditoryId], references: [id])
}
